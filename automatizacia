name: automatizácia

# Spustenie každý pracovný deň o 14:20 UTC (16:20 CEST)
on:
schedule:
    # Letný čas (CEST = UTC+2): apríl – október, pondelok–piatok o 16:20 CEST = 14:20 UTC
    - cron: '20 14 * 4-10 1-5'
    # Zimný čas (CET = UTC+1): november – marec, pondelok–piatok o 16:20 CET = 15:20 UTC
    - cron: '20 15 * 11-3 1-5'
  
  # Možnosť manuálneho spustenia pre testovanie
  workflow_dispatch:

jobs:
  automatizacia:
    runs-on: ubuntu-latest
    env:
      ELKO_USERNAME: ${{ secrets.ELKO_USERNAME }}
      ELKO_PASSWORD: ${{ secrets.ELKO_PASSWORD }}
    steps:
    - name: 📦 Checkout kód
      uses: actions/checkout@v4
      
    - name: 🐍 Nastavenie Python 3.11
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'
        
    - name: 💾 Cache pip packages
      uses: actions/cache@v3
      with:
        path: ~/.cache/pip
        key: ${{ runner.os }}-pip-${{ hashFiles('**/requirements.txt') }}
        restore-keys: |
          ${{ runner.os }}-pip-
        
    - name: 📋 Inštalácia Python závislostí
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt
        
    - name: 🌐 Inštalácia Chrome a ChromeDriver
      run: |
        # Aktualizácia apt
        sudo apt-get update
        
        # Inštalácia Google Chrome
        wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | sudo apt-key add -
        echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" | sudo tee /etc/apt/sources.list.d/google-chrome.list
        sudo apt-get update
        sudo apt-get install -y google-chrome-stable
        
        # Overenie inštalácie
        google-chrome --version
        
    - name: 🤖 Spustenie automatizácie
      run: |
        echo "🚀 Spúšťam automatizáciu..."
        python automatizacia.py
        echo "✅ Automatizácia dokončená!"
        
    - name: 📸 Upload screenshots pri chybe
      if: failure()
      uses: actions/upload-artifact@v3
      with:
        name: error-screenshots
        path: "*.png"
        retention-days: 7
        
    - name: 📄 Upload HTML súborov pri chybe
      if: failure()
      uses: actions/upload-artifact@v3
      with:
        name: error-html
        path: "*.html"
        retention-days: 7
        
    - name: ✅ Úspešné dokončenie
      if: success()
      run: |
        echo "🎉 Automatizácia úspešne dokončená!"
        echo "📅 Čas: $(date)"
        echo "📊 Využitie GitHub Actions minút: ~2-3 minúty"
